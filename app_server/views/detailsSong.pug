extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Song: #{name}
      form.form-horizontal(method="get", action='/song/'+ _id +'/updateForm')
        input.updateButton(type="submit", value="Edit song")
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p Artist: #{artist}
          p Genre: #{genre}
            .panel.panel-primary
              .panel-heading
                h2.panel-title Information about the song
              .panel-body
                p Album: #{album}
                p Year: #{year}
                p Theme: #{theme}
            .panel.panel-primary
              .panel-heading
                h2.panel-title Characteristics
              .panel-body
                span.label.label-success
                  span.glyphicon.glyphicon-ok
                  | &nbsp;#{characteristics}
                | &nbsp;
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title
            .panel-body
              .embed-responsive.embed-responsive-4by3
                - picture= picture
                img.embed-responsive-item(src=picture)
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              h2.panel-title Other song from the same artist
            .panel-body
             .row
               .col-xs-12
                  p= otherSong